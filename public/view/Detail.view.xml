<mvc:View controllerName="sap.ui.demo.basicTemplate.controller.Detail"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns:c="sap.ui.core" xmlns:t="sap.ui.table"
	xmlns:f="sap.ui.layout.form" xmlns="sap.m">
	<App>
		<pages>
			<Page id="page" title="{i18n>title}">
				<content>
					<VBox fitContainer="true">
						<f:SimpleForm id="SimpleFormDisplay480" minWidth="1024" maxContainerCols="2" editable="false" layout="ResponsiveGridLayout" title="Address" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
							<f:content>
								<c:Title text="Office"/>
								<Label text="Name"/>
								<Text text="{tt>/ahorro}"/>
								<Label text="Street/No."/>
								<Text text="Main St 1618"/>
								<Label text="ZIP Code/City"/>
								<Text text="31415 Maintown"/>
								<Label text="Country"/>
								<Text text="Germany"/>
								<c:Title text="Online"/>
								<Label text="Web"/>
								<Text text="http://www.sap.com"/>
								<Label text="Twitter"/>
								<Text text="@sap"/>
							</f:content>
						</f:SimpleForm>
						<Table id="idProductsTable" inset="false" alternateRowColors="true" items="{
									path: '/ProductCollection',
									sorter: {
										path: 'Name'
									}
								}">
							<headerToolbar>
								<Toolbar>
									<Title text="Products" level="H2"/>
								</Toolbar>
							</headerToolbar>
							<columns>
								<Column width="12em">
									<Text text="Product"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true">
									<Text text="Supplier"/>
								</Column>
								<Column minScreenWidth="Tablet" demandPopin="true" hAlign="End">
									<Text text="Dimensions"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<ObjectIdentifier title="{Name}" text="{ProductId}"/>
										<Text text="{SupplierName}"/>
										<Text text="{Width} x {Depth} x {Height} {DimUnit}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</VBox>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>
