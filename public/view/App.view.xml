<mvc:View controllerName="sap.ui.demo.basicTemplate.controller.App"
	xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
xmlns:c="sap.ui.core"
xmlns:t="sap.ui.table"
xmlns:f="sap.ui.layout.form"
	xmlns="sap.m">
	<App>
		<pages>
			<Page id="page" title="{i18n>title}">
				<content>
					<VBox fitContainer="true">
							<f:SimpleForm id="SimpleFormDisplay480"
								minWidth="1024"
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								title="Address"
								labelSpanL="4"
								labelSpanM="4"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="2"
								columnsM="2">
								<f:content>
									<c:Title text="Office" />
									<Label text="Name" />
									<Text text="{tt>/ahorro}" />
									<Label text="Street/No." />
									<Text text="Main St 1618" />
									<Label text="ZIP Code/City" />
									<Text text="31415 Maintown" />
									<Label text="Country" />
									<Text text="Germany" />
									<c:Title text="Online" />
									<Label text="Web" />
									<Text text="http://www.sap.com" />
									<Label text="Twitter" />
									<Text text="@sap" />
								</f:content>
							</f:SimpleForm>
							<t:AnalyticalTable visibleRowCountMode="Auto" selectionMode="MultiToggle" rowHeight="32">
								<t:columns>
									<t:AnalyticalColumn />
									<t:AnalyticalColumn />
									<t:AnalyticalColumn />
								</t:columns>
								<t:layoutData>
									<FlexItemData growFactor="1" baseSize="0%" styleClass="sapUiResponsiveContentPadding" />
								</t:layoutData>
							</t:AnalyticalTable>
						</VBox>
					</content>
			</Page>
		</pages>
	</App>
</mvc:View>
